input, button, label {
  font-size: 100%;
  outline: none;
  padding: 10px;
}

input {
  border: 1px solid $slight-grey;
  background-color: $offwhite;
}

form {
  display: flex;
  flex-flow: row wrap;
  justify-content: flex-start;
  align-items: baseline;
  align-content: flex-start;
}

label {
  flex: 0 1 100%;
  padding: 0px;
  margin-bottom: 3px;
  margin-left: 1px;

  &[disabled=disabled] {
    color: $light-grey;
  }
}

input {
  flex: 1 1 215px;
}

button {
  button-blue();
  border: 1px solid transparent;
  flex: 0.5 1 auto;

  &[disabled] {
    transition: background-color 0.2s, color 0.2s;
    background-color: $dark-blue;
    color: $light-blue;
  }
}

.modal form {

  h2, h3, h4, h5, h6 {
    color: white;
  }

  fieldset {
    padding-bottom: 10px;
    border-bottom: 1px solid $light-grey;
    &:last-child {
      border-bottom-color: transparent;
    }
  }

  label {
    display: block;
  }

  label:not(.light) {
    font-weight: bold;
  }

  input[type=checkbox] {
    margin-bottom: 10px;
  }

  textarea {
    width: 100%;
    height: 70px;
    border: 1px solid black;
    padding: 5px;
    background-color: $dark-grey;
    color: white;
  }

  fieldset.pricing label {
    display: inline-block;
    margin-right: 10px;
  }
}
