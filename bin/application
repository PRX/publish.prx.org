#!/bin/sh

PROCESS=
CMD_ARGS=
CMD=

ApplicationUsage () {
  echo "usage: application [ start | build | start-dev | build-dev | test | tdd | ci | help | -- COMMAND ]"
}

ApplicationParseOpts () {
  PROCESS=$1
  shift
  CMD_ARGS=$*
}

ApplicationRun () {
  CMD=
  if [ "$PROCESS" = "help" ] ; then
    ApplicationUsage
    exit
  elif [ "$PROCESS" = "--" ] ; then
    CMD=
  else
    CMD="npm run-script $PROCESS"
  fi

  $CMD $CMD_ARGS
}

ApplicationParseOpts $*
ApplicationRun
